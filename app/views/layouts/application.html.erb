                <div class="menu-item"><%= link_to "六国赛", "/event/six-nations" %></div>
                <div class="menu-item"><%= link_to "世界杯", "/event/rugby-world-cup" %></div>
                <div class="menu-item"><%= link_to "欧洲冠军杯", "/event/european-champions-cup" %></div>
                <div class="menu-item"><%= link_to "欧洲挑战杯", "/event/european-challenge-cup" %></div>
                <div class="menu-item"><%= link_to "CurrieCup", "/event/currie-cup" %></div>
                <div class="menu-item"><%= link_to "Mitre10Cup", "/event/mitre-10-cup" %></div>
                <div class="menu-item"><%= link_to "NRC", "/event/national-rugby-championship" %></div>
                <div class="menu-item"><%= link_to "TopLeague", "/event/top-league" %></div>
