                <div class="menu-item"><%= link_to "相关资料", info_url %></div>
                <div class="menu-item"><%= link_to "关于", about_url %></div>
              </div>
            </div>
            <div class="menu-dropdown-sublist menu-off">
              <div class="menu-dropdown-wrapper menu-dropdown-flex">
                <div class="menu-item"><%= link_to "SuperRugby", "/event/super-rugby" %></div>
                <div class="menu-item"><%= link_to "Premiership", "/event/premiership" %></div>
                <div class="menu-item"><%= link_to "Top14", "/event/top14" %></div>
