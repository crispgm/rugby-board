            </div>
          </div>
          <div class="menu-dropdown menu-off">
            <div class="menu-dropdown-wrapper">
              <div class="menu-dropdown-list">
                <div class="menu-item"><%= link_to "新闻", news_url, channel: "news" %></div>
                <div class="menu-item"><%= link_to "比分", results_url, channel: "results" %></div>
                <div class="menu-item" id="menu-list-toggle"><%= link_to "全部列表", "#" %></div>
