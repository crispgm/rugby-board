<div class="section">
  <% @news.each do |n| %>
  <div class="section-wrap" id="news-<%= n.id %>">
    <div class="section-item">
      <div class="section-title">
      [<%= n.created_at.strftime("%Y-%m-%d") %>]
      <%= n.title %>
      </div>
      <div class="section-content">
      <%= n.content %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="section-wrap info">
    <div class="section-item">
      <div class="section-title">
        <%= link_to "更多新闻", controller: "news", action: "list" %>
      </div>
    </div>
  </div>
</div>
