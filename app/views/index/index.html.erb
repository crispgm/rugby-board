<% flash.each do |type, msg| %>
<div class="news">
  <div class="news-wrap <%= type %>">
    <div class="news-item">
      <div id="flash-message" class="news-title">
        <%= icon("fw fa-info") %>
        <%= msg %>
      </div>
    </div>
  </div>
</div>
<div class="news"></div>
<% end %>

<div class="columns">
  <div class="column column-3-5">
    <div>
      <div class="heading">
        <div class="heading-more">
          <%= link_to "更多", news_url %>
        </div>
        <div class="heading-title" id="latest-news">
          <%= icon("fw fa-newspaper-o") %> 新闻
        </div>
      </div>

      <div class="columns">
        <div class="column">
          <div class="news" id="highlight">
            <div class="news-wrap news-headline">
              <% @highlight.each do |h| %>
                <div class="news-item">
                  <div class="news-title" id="news-<%= h.id %>">
                    <%= icon("hashtag") %>
                    <%= link_to h.title, "/news/#{h.id}" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="columns">
        <div class="column">
          <div class="news" id="news">
            <% @news.each do |n| %>
              <% cache n do %>
                <%= render n %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="column column-2-5">
    <div>
      <div class="heading">
        <div class="heading-more">
          <%= link_to "更多", results_url %>
        </div>
        <div class="heading-title" id="latest-results">
          <%= icon("fw fa-table") %> 比分
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <div class="news" id="results">
            <% @results.each do |n| %>
              <% cache n do %>
                <%= render n %>
              <% end %>
            <% end %>
          </div>
          <div class="news"></div>
        </div>
      </div>
    </div>

    <div>
      <div class="heading">
        <div class="heading-more">
          <%= link_to "更多", wiki_url %>
        </div>
        <div class="heading-title" id="event-intro">
          <%= icon("fw fa-info-circle") %> 赛事介绍
        </div>
      </div>
      <div class="news" id="wiki">
        <div class="news-wrap">
          <div class="news-item">
            <ul><b>国家队赛事</b>
              <li><a href="/wiki/rugby-championship" class="">橄榄球冠军赛 The Rugby Championship</a></li>
              <li><a href="/wiki/six-nations" class="">欧洲六国赛 Six Nations</a></li>
              <li><a href="/wiki/rugby-world-cup" class="">橄榄球世界杯 Rugby World Cup</a></li>
              <li><a href="/wiki/british-and-irish-lions" class="">不列颠和爱尔兰狮子 British &amp; Irish Lions</a></li>
            </ul>
            <ul><b>俱乐部赛事</b>
              <li><a href="/wiki/super-rugby" class="">超级橄榄球 Super Rugby</a></li>
              <li><a href="/wiki/pro14" class="">凯尔特 PRO14 联赛</a></li>
              <li><a href="/wiki/premiership" class="">英格兰超级联赛 Premiership</a></li>
              <li><a href="/wiki/top14" class="">法国 Top 14 联赛</a></li>
            </ul>
            <ul><b>国内赛事</b>
              <li><a href="/wiki/top-league" class="">日本 Top League 联赛</a></li>
              <li><a href="/wiki/currie-cup" class="">南非库里杯 Currie Cup</a></li>
              <li><a href="/wiki/mitre-10-cup" class="">新西兰 Mitre 10 Cup</a></li>
              <li><a href="/wiki/national-rugby-championship" class="">澳大利亚国家橄榄球冠军赛 NRC</a></li>
              <li><a href="/wiki/major-league-rugby" class="">美国橄榄球大联盟 MLR</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
