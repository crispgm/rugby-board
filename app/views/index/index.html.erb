<div class="section">
  <% @news.each do |n| %>
  <div class="section-wrap hover-effect" id="news-<%= n.id %>">
    <div class="section-item">
      <div class="section-title">
      <%= link_to n.title, "/news/#{n.id}" %>
      </div>
      <% if n.content.size != 0 %>
      <div class="section-content">
        <%= raw n.markdown_content %>
      </div>
      <% end %>
      <div class="section-time">
        <%= link_to n.created_at.strftime("%H:%M %Y-%m-%d"), "/news/#{n.id}" %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="section-wrap info">
    <div class="section-item">
      <div class="section-title">
        <%= link_to "更多新闻", controller: "news", action: "list" %>
      </div>
    </div>
  </div>
</div>
