<% flash.each do |type, msg| %>
<div class="section">
  <div class="section-wrap <%= type %>">
    <div id="flash-message" class="section-title">
      <%= msg %>
    </div>
  </div>
</div>
<% end %>

<div class="columns">
  <div class="column column-2-3">
    <div class="column-corner">
      <%= link_to "更多", news_url %>
    </div>
    <div class="column-title">
      新闻
    </div>

    <div class="section">
      <% @highlight.each do |h| %>
      <div class="section-wrap section-headline">
        <div class="section-item" id="news-<%= h.id %>">
          <div class="section-title section-top">
            <%= link_to h.title, "/news/#{h.id}" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <div class="section">
      <div class="section-wrap">
      <% @news.each do |n| %>
        <%= render n %>
      <% end %>
      </div>
    </div>

    <div class="section-wrap info">
      <div class="section-item">
        <%= link_to "更多新闻", news_url %>
      </div>
    </div>
  </div>
  <div class="column column-1-3">
    <div class="column-corner">
      <%= link_to "更多", results_url %>
    </div>
    <div class="column-title">
      最新比分
    </div>
    <div class="section">
      <div class="section-wrap">
        <% @results.each do |n| %>
          <%= render n %>
        <% end %>
      </div>
    </div>

    <div class="column-title">
      赛事介绍
    </div>
    <div class="section">
      <div class="section-wrap">
        <div class="section-item">
          <div class="section-content">
            国家队赛事
            <ul>
              <li><a href="/wiki#the-rugby-championship">橄榄球冠军赛 The Rugby Championship</a></li>
              <li><a href="/wiki#six-nations">欧洲六国赛 Six Nations</a></li>
              <li><a href="/wiki#rugby-world-cup">橄榄球世界杯 Rugby World Cup</a></li>
            </ul>
            俱乐部赛事
            <ul>
              <li><a href="/wiki#super-rugby">超级橄榄球 Super Rugby</a></li>
              <li><a href="/wiki#pro12-rugby">PRO12（前凯尔特联赛）</a></li>
              <li><a href="/wiki#premiership-rugby">英格兰超级联赛 Premiership</a></li>
              <li><a href="/wiki#top14-rugby">法国 TOP14 联赛</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>