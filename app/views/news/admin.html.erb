<div class="section">
  <div class="section-wrap">
    <div class="section-item">
      <div class="section-title">
        Create news:
      </div>
      <%= form_for :news, method: :post, url: '/news/create' do |f| %>
      <div class="section-content">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="section-content">
        <%= f.label :content %>
        <%= f.text_area :content %>
      </div>
      <div class="section-content">
        <%= f.label :channel %>
        <%= select_tag(:channel, options_for_select(@channel_list))
        %>
      </div>
      <div class="section-content">
        <%= f.label :event %>
        <%= select_tag(:event, options_for_select(@event_list)) %>
        </select>
      </div>
      <div class="section-content">
        <%= f.label :tag %>
        <%= f.text_field :tag %>
      </div>

      <%= f.hidden_field :token, value: "12ffbb6" %>

      <div class="section-content">
        <%= f.submit %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="section">
  <div class="section-wrap">
    <div class="section-item">
      <div class="section-title">
        Delete news:
      </div>
      <%= form_for :news, method: :delete, url: '/news/delete' do |f| %>
      <div class="section-content">
        <%= f.label :id %>
        <%= f.text_field :id %>
      </div>
    </div>
    <div class="section-content">
      <%= f.submit %>
    </div>
  </div>
  <% end %>
</div>