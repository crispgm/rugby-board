<div class="section">
  <div class="section-wrap" id="news-<%= @news.id %>">
    <div class="section-item">
      <div class="section-title">
      <%= @news.title %>
      </div>
      <% if @news.content.size != 0 %>
      <div class="section-content">
        <%= raw @news.markdown_content %>
      </div>
      <% end %>
      <div class="section-footer">
        <span class="section-channel left">
          <%= News::CHANNEL_LIST[@news.channel][0] %>
          <% if @news.event != 0 %>
            | <%= News::EVENT_LIST[@news.event][0] %>
          <% end %>
        </span>
        <span class="section-time right"><%= link_to @news.created_at.strftime("%H:%M %Y-%m-%d"), "/news/#{@news.id}" %></span>
      </div>
    </div>
  </div>
</div>

<div class="section">
  <div class="section-wrap info">
    <%= link_to "返回", controller: "index", action: "index" %>
  </div>
</div>